#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os
import readline
import signal
import sys
import termios
import time


sys.path.insert(0, os.getcwd())

from opr.obj import Class, Wd, keys, last, printable, update
from opr.hdl import Command
from opr.evt import Event
from opr.hdl import Handler
from opr.prs import parse


from opr import Cfg, scan


from operbot.irc import Config, IRC
from operbot.rss import Fetcher


from operbot import cmds, irc, rss


Config.nick = "operd"
Config.channel = "#operbot"
Config.realname = "operator daemon"
Config.username = "operd"


Wd.workdir = os.path.expanduser("~/.operbot")


scan(cmds)
scan(irc)
scan(rss)


def daemon():
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    sis = open("/dev/null", 'r')
    sos = open("/dev/null", 'a+')
    ses = open("/dev/null", 'a+')
    os.dup2(sis.fileno(), sys.stdin.fileno())
    os.dup2(sos.fileno(), sys.stdout.fileno())
    os.dup2(ses.fileno(), sys.stderr.fileno())


def hup(_sig, _frame):
    print("signal 15 called")
    sys.stdout.flush()


def main():
    daemon()
    permission(Wd.workdir)
    signal.signal(signal.SIGHUP, hup)
    bot = IRC()
    bot.start()
    fetcher = Fetcher()
    fetcher.start()
    bot.wait()
        

main()
