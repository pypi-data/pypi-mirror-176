{
    "testRunner": "jest",
    "runnerConfig": "jest.config.json",
    "apps": {
        "ios.debug": {
            "type": "ios.app",
            "build": "cd ../mobile/ios && xcodebuild -workspace Mobile.xcworkspace -scheme Mobile -configuration Debug -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 13' -derivedDataPath ./build -quiet",
            "binaryPath": "../mobile/ios/build/Build/Products/Debug-iphonesimulator/Mobile.app"
        },
        "ios.release": {
            "type": "ios.app",
            "build": "cd ../mobile/ios && xcodebuild -workspace Mobile.xcworkspace -scheme Mobile -configuration Release -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 13' -derivedDataPath ./build -quiet",
            "binaryPath": "../mobile/ios/build/Build/Products/Release-iphonesimulator/Mobile.app"
        },

        "ios.eas": {
            "type": "ios.app",
            "build": "npx nx run mobile:download --platform ios --distribution simulator --output=apps/mobile/dist/",
            "binaryPath": "../mobile/dist/Mobile.app"
        },
        "ios.local": {
            "type": "ios.app",
            "build": "npx nx run mobile:build --platform ios --profile preview --wait --local --no-interactive --output=apps/mobile/dist/",
            "binaryPath": "../mobile/dist/Mobile.app"
        },

        "android.debug": {
            "type": "android.apk",
            "build": "cd ../mobile/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
            "binaryPath": "../mobile/android/app/build/outputs/apk/debug/app-debug.apk"
        },
        "android.release": {
            "type": "android.apk",
            "build": "cd ../mobile/android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release",
            "binaryPath": "../mobile/android/app/build/outputs/apk/release/app-release.apk"
        },

        "android.eas": {
            "type": "ios.app",
            "build": "npx nx run mobile:download --platform android --output=apps/mobile/dist/",
            "binaryPath": "../mobile/dist/Mobile.apk"
        },
        "android.local": {
            "type": "ios.app",
            "build": "npx nx run mobile:build --platform android --profile preview --wait --local --no-interactive --output=apps/mobile/dist/",
            "binaryPath": "../mobile/dist/Mobile.apk"
        }
    },
    "devices": {
        "simulator": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 13"
            }
        },
        "emulator": {
            "type": "android.emulator",
            "device": {
                "avdName": "Pixel_4a_API_30"
            }
        }
    },
    "configurations": {
        "ios.sim.release": {
            "device": "simulator",
            "app": "ios.release"
        },
        "ios.sim.debug": {
            "device": "simulator",
            "app": "ios.debug"
        },

        "ios.sim.eas": {
            "device": "simulator",
            "app": "ios.eas"
        },
        "ios.sim.local": {
            "device": "simulator",
            "app": "ios.local"
        },

        "android.emu.release": {
            "device": "emulator",
            "app": "android.release"
        },
        "android.emu.debug": {
            "device": "emulator",
            "app": "android.debug"
        },

        "android.sim.eas": {
            "device": "simulator",
            "app": "android.eas"
        },
        "android.sim.local": {
            "device": "simulator",
            "app": "android.local"
        }
    }
}
